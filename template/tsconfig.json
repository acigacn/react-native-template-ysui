{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-native",
    "declaration": true,
    "sourceMap": false,
    "removeComments": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    // 自定义路径别名，以方便文件统一引入及规范
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["./api/*"],
      "@mock/*": ["./mock/*"],
      "@confs/*": ["./configs/*"],
      "@comms/*": ["./common/*"],
      "@comps/*": ["./components/*"],
      "@conts/*": ["./constants/*"],
      "@helps/*": ["./helpers/*"],
      "@stors/*": ["./stores/*"],
      "@servs/*": ["./services/*"],
      "@views/*": ["./views/*"],
    }
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
